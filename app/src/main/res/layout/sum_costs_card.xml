<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_total_cost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sum_card_item_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_cost_row">

                <TextView
                    android:id="@+id/item_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chicken"
                    android:textSize="@dimen/text_size_total_price_card_title" />

                <TextView
                    android:id="@+id/item_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="$13.99"
                    android:textSize="@dimen/text_size_total_price_card_title"/>
            </LinearLayout>

            <View
                android:id="@+id/card_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sum_card_item_row"
                android:background="#CBCBCB" />

            <LinearLayout
                android:id="@+id/sum_card_tip_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_line"
                android:orientation="horizontal"
                android:padding="@dimen/padding_cost_row">

                <TextView
                    android:id="@+id/tip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tip"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_total_price_card_content" />

                <TextView
                    android:id="@+id/tip_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="$3.09"
                    android:textSize="@dimen/text_size_total_price_card_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/sum_card_tax_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sum_card_tip_row"
                android:orientation="horizontal"
                android:padding="@dimen/padding_cost_row">

            <TextView
                android:id="@+id/tax_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_total_price_card_content" />

            <TextView
                android:id="@+id/tax_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="$2.58"
                android:textSize="@dimen/text_size_total_price_card_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sum_card_tax_row"
                android:orientation="horizontal"
                android:padding="@dimen/padding_cost_row">

            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_total_price_card_content"
                android:layout_gravity="start|center"/>

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="$20.13"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_total_price_card_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



